<% @allergens.each do |allergen| %>
  <tr>
    <td><%= allergen.name %></td>
    <td><%= allergen.abbr %></td>
    <td><%= allergen.description %></td>
    <td><%= link_to 'Show', allergen %></td>
    <td><%= link_to 'Edit', edit_allergen_path(allergen) %></td>
    <td><%= link_to 'Destroy', allergen, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

